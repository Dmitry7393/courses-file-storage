<!--Displays in area icons and names of files-->
@model List<CloudStorage.Domain.FileAggregate.FileInfo>


<div id="block_view_files_folders">
    <div id="displayingData">
        <input type="button" value="Upload files" onclick="addFiles();" />
        <input type="button" value="Add folder" onclick="createFolder();" />
        <div onmousedown="HideMenu('contextMenu');"
             onmouseup="HideMenu('contextMenu');"
             oncontextmenu="ShowMenu('contextMenu',event);"
             class="bottom-three"
             id="dropArea">
            <div id="scrollbarViewData">
                @if (Model != null)
                {
                    foreach (var file in Model)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 property-align-center popr" id="@file.Id" onclick="test(@file.Id)" data-id="1">
                            <input hidden name="@file.Id" value="@file.Extension" />
                                @if (file.Extension == null)
                                {
                                    <img src='@Url.Action("GetImage", "Files", new {fileID = file.Id})' ondblclick="openFolder('@file.Id')" width="60" height="60" />
                                }
                                else
                                {
                                    <img src='@Url.Action("GetImage", "Files", new {fileID = file.Id})' width="60" height="60" />
                                }
                           <br />
                            <div id="truncateLongTexts">
                                @file.Name
                            </div>
                        </div>
                    }
                }
                
                <div class="popr-box" data-box-id="1">
                    <div class="popr-item " id="edit" onclick="downloadFile('edit')">Download</div>
                    <div class="popr-item " id="edit" onclick="redact('edit')">Redact</div>
                    <div class="popr-item label-danger" id="delete" onclick="del('edit')">Delete</div>
                </div>
            </div>
            <div id="progressBar">
                <progress value="0" max="100" id="progresBar">
                    Текст
                </progress>
            </div>
        </div>
    </div>
</div>

