@helper GetTreeView(List<CloudStorage.UI.Models.TreeViewStructure> fileSctructure, int parentID)
{
foreach (var i in fileSctructure.Where(a => a.ParentID.Equals(parentID)))
{
        <li>
            @{var submenu = fileSctructure.Where(a => a.ParentID.Equals(i.FileSystemStructureID)).Count();}
            @if (submenu > 0)
            {
                <span class="collapse collapsible">&nbsp;</span>
            }
            else
            {
                <span style="width:15px; display:inline-block">&nbsp;</span>
            }
            <span>
                    <a href="/Files/ShowUserFiles?fileSystemStructureID=@i.FileSystemStructureID">@i.Name</a>
            </span>
            @if (submenu > 0)
            {
                <ul>
                    @Treeview.GetTreeView(fileSctructure, i.FileSystemStructureID)
                    @* Recursive  Call for Populate Sub items here*@
                </ul>
            }
        </li>
                }
}

